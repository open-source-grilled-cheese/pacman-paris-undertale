-- draw functions
function _draw_walk()
	-- draw player
	cls(0)
	spr(2, p.x, p.y, 2, 2)

	-- draw npcs
	draw_npcs()
end

function _draw_dialog()
	-- draw the background
	_draw_walk()

	-- draw the dialog box
	rectfill(p.x-60, p.y-60, p.x+64, p.y-32, 0)
	rect(p.x-60, p.y-60, p.x+64, p.y-32, 7)
	-- draw the text
	print(dialog.lines[dialog.curr], p.x-56, p.y-56)
end

function _draw_battle()
	cls(1)
	spr(1, p.x, p.y)
end

function draw_npcs()
	for npc in all(npcs) do
